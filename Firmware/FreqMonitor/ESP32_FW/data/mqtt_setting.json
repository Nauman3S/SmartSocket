{
  "title": "Settings",
  "uri": "/mqtt_setting",
  "menu": true,
  "auth": "digest",
  "element": [{
      "name": "style",
      "type": "ACStyle",
      "value": "label+input,label+select{position:sticky;left:120px;width:230px!important;box-sizing:border-box;}"
    },
    {
      "name": "header",
      "type": "ACText",
      "value": "<h2>System Settings</h2>",
      "style": "text-align:center;color:#2f4f4f;"
    },
    {
      "name": "caption",
      "type": "ACText",
      "value": "MQTT and Other Settings",
      "style": "font-family:serif;color:#4682b4;"
    },
    {
      "name": "mqttserver",
      "type": "ACInput",
      "value": "mqtt.thingspeak.com",
      "placeholder": "MQTT broker server",
      "label": "MQTT Server"
    },
    {
      "name": "userkey",
      "type": "ACInput",
      "value": "",
      "label": "MQTT Username"
    },
    {
      "name": "apikey",
      "type": "ACInput",
      "value": "",
      "label": "MQTT Password"
    },
    {
      "name": "channelid",
      "type": "ACInput",
      "value": "",
      "label": "Channel ID"
    },
    {
      "name": "newline2",
      "type": "ACElement",
      "value": "<hr>"
    },
    {
      "name": "hostname",
      "type": "ACInput",
      "label": "ESP hostname(Device & AP Name)",
      "value": "SmartEFM"
    },
    {
      "name": "header2",
      "type": "ACText",
      "value": "<h4>Network Settings</h4>",
      "style": "text-align:center;color:#2f4f4f;"
    },
    {
      "name": "networkType",
      "type": "ACRadio",
      "label": "<h3>Network Type</h3>",
      "value": [
        "WiFi",
        "GPRS"
      ],
      "arrange": "vertical",
      "checked": 1
    },
    {
      "name": "apn",
      "type": "ACInput",
      "value": "internet",
      "label": "APN"
    },
    {
      "name": "apnUser",
      "type": "ACInput",
      "value": "internet",
      "label": "APN Username"
    },
    {
      "name": "apnPass",
      "type": "ACInput",
      "value": "internet",
      "label": "APN Password"
    },
    {
      "name": "newline2",
      "type": "ACElement",
      "value": "<hr>"
    },
    {
      "name": "apPass",
      "type": "ACInput",
      "label": "ESP AP Password",
      "value": "123456789AP"
    },
    {
      "name": "settingsPass",
      "type": "ACInput",
      "label": "Settings Page Password",
      "value": "admin"
    },
    {
      "name": "save",
      "type": "ACSubmit",
      "value": "Save&Start",
      "uri": "/mqtt_save"
    },
    {
      "name": "discard",
      "type": "ACSubmit",
      "value": "Discard",
      "uri": "/"
    }
  ]
}